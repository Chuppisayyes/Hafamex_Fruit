@page "/news"
<!-- Hero Section -->
<section class="news-hero">
    <div class="container">
        <div class="hero-content">
            <img src="https://i.pinimg.com/736x/39/5f/a0/395fa08f51783ea8cfbec5c4aa507c3e.jpg" alt="Hafamex Fruit"
                class="hero-image animate__animated" data-animate="animate__fadeInLeft">
            <div class="hero-text">
                <h1 class="hero-title animate__animated" data-animate="animate__fadeInLeft" data-delay="100">Latest News
                    from Hafamex Fruit</h1>
                <p class="hero-subtitle animate__animated" data-animate="animate__fadeInLeft" data-delay="200">
                    Bringing Vietnam's finest produce to the world.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- News List Section -->
<section class="news-list">
    <div class="container">
        <h5 class="hero-title animate__animated" data-animate="animate__fadeInLeft" data-delay="100">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Omnis, alias!</h5>
        <div class="news-cards">
            <!-- News Card 1 -->
            <div class="news-card animate__animated" data-animate="animate__fadeInLeft">
                <img src="https://i.pinimg.com/736x/ad/15/e1/ad15e1e7dc6bf0a9428ed87a67f93bfe.jpg"
                    alt="Dragon Fruit Export">
                <h3>Successful Dragon Fruit Shipment to Europe</h3>
                <p>Our latest premium dragon fruit has arrived safely in the EU, marking a new milestone for Hafamex
                    Fruit.</p>
                <a href="#">Read More →</a>
            </div>

            <!-- News Card 2 -->
            <div class="news-card animate__animated" data-animate="animate__fadeInLeft" data-delay="100">
                <img src="https://i.pinimg.com/736x/f4/10/cf/f410cffdef2fe5d5cae7ef92df462484.jpg"
                    alt="Fresh Vegetables">
                <h3>Expanding Our Fresh Vegetable Exports</h3>
                <p>We're proud to announce our new partnerships bringing fresh greens to Japan and Korea.</p>
                <a href="#">Read More →</a>
            </div>

            <!-- News Card 3 -->
            <div class="news-card animate__animated" data-animate="animate__fadeInLeft" data-delay="200">
                <img src="https://i.pinimg.com/736x/f3/c1/ce/f3c1cec3d4899667c7fabafd582fb283.jpg" alt="Premium Fruit">
                <h3>Introducing Our Premium Fruit Line</h3>
                <p>Discover our specially curated premium fruits, selected for international markets.</p>
                <a href="#">Read More →</a>
            </div>

        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <h2 class="cta-title animate__animated" data-animate="animate__fadeInLeft">Stay Updated With Us</h2>
        <a href="#" class="cta-button animate__animated" data-animate="animate__fadeInLeft"
            data-delay="100">Subscribe</a>
    </div>
</section>
