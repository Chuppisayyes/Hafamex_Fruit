@page "/about"
@page "/ve-chung-toi"
@using Microsoft.AspNetCore.Components.Routing
<div class="about-wrapper d-flex flex-nowrap">
    <section
        class="about-section section--large hero flex-shrink-0 vw-100 vh-100 d-flex justify-content-center align-items-center">
        <div class="hero-banner">

        </div>
        <div class="container animate__animated" data-animate="animate__fadeInDown">
            <div class="hero-content">
                <h1 class="hero-title">
                    From Farm to <br><span class="highlight">Global Market</span>
                </h1>
                <p class="hero-subtitle">
                    Premium Vietnamese agricultural products exported worldwide with international quality standards
                </p>
                <div class="hero-buttons">
                    <button class="btn-view-products">
                        <a href="/product">View Our Products</a>
                    </button>
                    <button class="btn-learn-more">
                        <NavLink href="#">Learn More</NavLink>
                    </button>
                </div>
            </div>
        </div>
    </section>
    <section
        class="about-section story section--dark section--small vh-100 flex-shrink-0 d-flex justify-content-center align-items-center">
        <div class="container animate__animated" data-animate="animate__fadeInDown">
            <h3 class="story-title">Our story</h3>
            <p class="story-phrase-first">
                Founded in 2008, GreenExport has grown from a small local farm to one of Vietnam's most trusted
                agricultural
                export companies. We specialize in tropical fruits, vegetables, and processed agricultural products that
                meet the highest international standards.
            </p>
            <p class="story-phrase-first">
                Our commitment to sustainable farming practices and cutting-edge technology has earned us certifications
                from major international bodies and partnerships with leading retailers worldwide.
            </p>
        </div>
        <div class="story">
            <img src="https://images.pexels.com/photos/1595104/pexels-photo-1595104.jpeg?auto=compress&cs=tinysrgb&w=800"
                alt="Our farm" class="rounded-2xl shadow-xl" />
        </div>
    </section>
    <section class="about-section section--small vh-100 flex-shrink-0 d-flex justify-content-center align-items-center">
        Part Three
    </section>
    <section
        class="about-section section--large flex-shrink-0 vw-100 vh-100 d-flex justify-content-center align-items-center four">
        Part Four
    </section>
</div>

<nav class="about-nav">
    <div>one</div>
    <div>two</div>
    <div>three</div>
    <div>four</div>
</nav>
