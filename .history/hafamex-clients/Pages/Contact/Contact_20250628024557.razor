@page "/contact"

@* Contact.razor *@
<section class="contact-section">
    <div class="contact-container">
        <div class="contact-header">
            <h2 class="contact-title">Get In Touch</h2>
            <p class="contact-subtitle">
                Ready to partner with us? Contact our team for inquiries about our products and services
            </p>
        </div>

        <div class="contact-grid">
            <!-- Contact Form -->
            <div class="contact-form">
                <h3>Send us a message</h3>
                <form>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" placeholder="Your full name" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" placeholder="your@email.com" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="tel" placeholder="+84 123 456 789" />
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea rows="5" placeholder="Tell us about your requirements..."></textarea>
                    </div>
                    <button type="submit">Send Message</button>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="contact-info">
                <h3>Contact Information</h3>
                <div class="info-item">
                    <i class="info-icon fa-solid fa-location-dot"></i>
                    <div>
                        <h4>Head Office</h4>
                        <p>200 GO DAU STREET, TAN QUY WARD, TAN  PHU DISTRICT, HO CHI MINH CITY</p>
                    </div>
                </div>
                <div class="info-item mt-3">
                    <i class="info-icon fa-solid fa-phone"></i>
                    <div>
                        <h4>Phone</h4>
                        <p>(+84) 375 225 229</p>
                    </div>
                </div>
                <div class="info-item mt-5">
                    <i class="info-icon fa-solid fa-envelope"></i>
                    <div>
                        <h4>Email</h4>
                        <p>info@hafamexfruit.com</p>
                    </div>
                </div>

                <!-- Map Placeholder -->
                <div class="contact-map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7450.560792126687!2d106.61801237480512!3d10.796057589353916!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752bf8fe8b8253%3A0xbdef33932e157f39!2zMjAwIMSQLiBHw7IgROG6p3UsIFTDom4gUXXDvSwgVMOibiBQaMO6LCBI4buTIENow60gTWluaCA3MDAwMDAsIFZp4buHdCBOYW0!5e1!3m2!1svi!2s!4v1751053158196!5m2!1svi!2s"
                        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
