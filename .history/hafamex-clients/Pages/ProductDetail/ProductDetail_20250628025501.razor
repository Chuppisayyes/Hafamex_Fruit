@page "/product-detail/{ProductSlug}"
@using hafamex_clients.Components.ProductBanner
@using hafamex_clients.Components.ProductCard
@using hafamex_clients.Models

<ProductBanner />

@{
var allProducts = FruitProducts.Concat(VegetableProducts).ToList();
var product = allProducts.FirstOrDefault(p => p.Slug == ProductSlug);
}

@if (product != null)
{
<section class="product-detail">
    <div class="container">
        <div class="product-image">
            <img src="@product.Image" alt="@product.Slug" class="img-fluid">
            @* <div class="product-img-related">
                @foreach (var image in product.ImageRelated)
                {
                    <img src="@image" alt="@product.Name" class="img-fluid" />
                }
            </div> *@
        </div>
        <div class="product-info">
            <h1 class="product-title">@product.Name</h1>
            <p class="product-full-description">@product.FullDescription</p>
            <p class="product-category">@product.Category</p>
            <div class="product-status">@product.Status</div>
            <button class="btn btn-primary">
                <a href="/contact">Contact to us</a>
            </button>
        </div>
    </div>
</section>

<section class="related-products">
    <hr>
    <div class="container">
        <h2>Related Products</h2>
        <div class="products-grid">
            @foreach (var p in FruitProducts)
            {
                <ProductCard Product="@p" />
            }
        </div>
    </div>
</section>
}
else
{
    <p>Product not found.</p>
}

