@using System.Globalization
@inject NavigationManager Navigation
@if (Product == null)
{
    <p style="color:red;">âš  Product data is null!</p>
}
else
{
    <div class="product-card">
        <div class="product-image">
            <NavLink href="@($"/product-detail/{Product.Slug}")">
                <img src="@Product.Image" alt="@Product.Name" loading="lazy" />
            </NavLink>
            <button class="quick-view-btn">
                <img src="Images/logoNenTrang1.jpg" alt="Quick view" />
            </button>
        </div>
        <div class="product-info">
            <NavLink href="@($"/product-detail/{Product.Slug}")" class="product-name">
                @Product.Name
            </NavLink>
            <p class="product-discription">@Product.Description</p>
            <button class="contact-btn">Contact</button>
            <button class="details-btn">
                <NavLink href="@($"/product-detail/{Product.Slug}")" > 
                Get Detail 
                </NavLink>
            </button>
        </div>
    </div>
}
@code {
    [Parameter] public Product Product { get; set; } = default!;
    private void NavigateToDetail()
    {
        Navigation.NavigateTo($"/product-detail/{Product.Slug}");
    }

}
