@using hafamex_clients.Models
@inject NavigationManager Navigation

<section class="product-list" id="product-list">
    <div class="container">
        <h1 class="poppins-600 animate__animated" data-animate="animate__fadeInDown">Our Products</h1>
        <p class="poppins-400 animate__animated" data-animate="animate__fadeInDown">
            Discover our finest selection of fresh tropical fruits, carefully hand-picked for quality and taste.
        </p>
        <div class="list-product-item">
            <div class="grid-product animate__animated animate__slow" data-animate="animate__fadeInUp">
                @foreach (var product in FruitProducts)
                {
                    <a class="product-item" href="/product-detail/@product.Slug">
                        <img src="@product.Image" alt="@product.Name" />
                        <div class="overlay">
                            <div class="float-content">
                                <div class="logo-title">@product.Name</div>
                                <div class="product-rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(product.Rating))
                                        {
                                            <i class="fa-solid fa-star"></i>
                                        }
                                        else if (i - product.Rating == 0.5)
                                        {
                                            <i class="fa-solid fa-star-half-stroke"></i>
                                        }
                                    }
                                </div>
                                <div class="logo-desc">@product.Description</div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
        <div class="row mt-5">
            <div class="col-12 d-flex justify-content-center">
                <button class="btn-get-more">
                    <a href="/product-browse">Watch More</a>
                </button>
            </div>
        </div>
</section>
