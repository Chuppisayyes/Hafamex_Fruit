<section class="process">
    <div class="process-container">
        <h1 class="process-title animate__animated" data-animate="animate__zoomIn" style="animation-duration: 1.6s;">
            Factory & Technology
        </h1>
        <p class="subtitle-process animate__animated" data-animate="animate__zoomIn" style="animation-duration: 1.6s;">
            From seed to shelf, our comprehensive process ensures the highest quality standards at every step
        </p>
        <div class="process-list">
            @for (int i = 0; i < Processlist.Count; i++)
            {
                var delay = 0.2 * i;
                <div class="process-item animate__animated" data-animate="animate__fadeInUp"
                    style="animation-delay:@($"{delay}s"); animation-duration: 1s;">
                    <div class="process-img">
                        <img src="@Processlist[i].ProcessImg" alt="@Processlist[i].ProcessTitle">
                    </div>
                </div>
            }
        </div>
    </div>
</section>


@code {
    class ProcessItem
    {
        public string ProcessImg { get; set; } = string.Empty;
        public string ProcessTitle { get; set; } = string.Empty;
        public string ProcessSubtitle { get; set; } = string.Empty;
    }
    private List<ProcessItem> Processlist = new(){
new ProcessItem{ProcessImg="https://i.postimg.cc/0kDNLmgg/DSC04044.jpg", ProcessTitle = "Expert Harvesting",
